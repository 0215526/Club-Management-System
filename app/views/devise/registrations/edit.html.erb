<h2 class="display-5 p-4 text-center font-weight-bold">Edit Your Details</h2>
<div class="row mb-2 justify-content-center">
  <div class="col col-md-6 shadow-lg p-4 mb-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :first_name, class:"col-md-4 text-capitalize font-weight-bold"%>
        <div class="col-md-8">
          <%= f.text_field :first_name, class: 'form-control', autofocus: true%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class:"col-md-8 text-capitalize font-weight-bold" %>
        <div class="col-md-8">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :gender, class:"col-md-8 text-capitalize font-weight-bold" %>
        <div class="d-flex flex-row ">
          <div class="col-md-3 ml-4">
            <%= f.radio_button :gender ,'Female', class: 'form-check-input' %> Female
          </div>
          <div class="col-md-4">
            <%= f.radio_button :gender ,'Male', class: 'form-check-input' %> Male 
          </div>
        </div>
      </div>

      <div class="form-row form-group">
        <div class="col-md-4">
          <%= f.label :dob, class:"col-form-label ml-3 text-capitalize font-weight-bold", value: "Date of Birth" %>
        </div>
        <div class="col-md-5">
            <%= f.date_field :dob, :value => Time.now.strftime('%Y-%m-%d'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :designation, class:"col-md-4 text-capitalize font-weight-bold" %>
        <div class="col-md-8">
          <%= f.text_field :designation, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :company, class:"col-md-4 text-capitalize font-weight-bold" %>
        <div class="col-md-4">
          <%= f.text_field :company, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :address, class:"col-md-4 text-capitalize font-weight-bold" %>
        <div class="col-md-8">
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class:"col-md-4 text-capitalize font-weight-bold" %>
        <div class="col-md-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>

      <%= f.hidden_field :admin, autocomplete: "email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group ml-3">
      <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false">
        Change Password
      </button>
      </div>
      <div class="collapse" id="collapseExample">
        <div class="form-group">
          <%= f.label :password, class:"col-md-4 text-capitalize font-weight-bold", value: "new password"%>
          <div class="col-md-8">
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            <% if @minimum_password_length %>
              <span class="text-danger font-weight-light text-sm-left">Required minimum of <%= @minimum_password_length %> characters</span>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class:"col-md-8 text-capitalize font-weight-bold" %>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class:"col-md-8 text-capitalize font-weight-bold" %> 
        <div class="col-md-8">
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>
        <span class="text-danger font-weight-light text-sm-left ml-3"><i>(we need your current password to confirm your changes)</i></span>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-success ml-3" %>
        <a href="/homes/<%= current_user.id %>"  class="btn btn-dark float-right">Cancel</a>
      </div>
    <% end %>

    <%
=begin%>
 <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>  
<%
=end%>
  </div>
</div>