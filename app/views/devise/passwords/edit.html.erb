<div class="d-flex justify-content-center h-100">
  <div class="card", style="width: 36rem; height: 27rem;">
    <div class="card-header">
      <h3 class="text-center">Change Your Password</h3>
    </div>
    <div class="card-body justify-content-center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, class:"col-md-4 text-capitalize font-weight-bold text-white"%>
        <div class="col-md-8">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control ' %>
          <% if @minimum_password_length %>
            <span class="text-danger font-weight-light text-sm-left">Required minimum of <%= @minimum_password_length %> characters</span>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class:"col-md-8 text-capitalize font-weight-bold text-white" %>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-primary float-left ml-3" %>
      </div>
    <% end %>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-center links">
        <%= link_to "Log in", new_session_path(resource_name), class:"ml-2 font-weight-bold text-white" %>
      </div>
      <div class="d-flex justify-content-center links">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class:"ml-2 font-weight-bold text-white" %>
        <%end%>
      </div>
      <div class="d-flex justify-content-center links small">
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-white" %>
      </div>
      <div class="d-flex justify-content-center links small">
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-white" %>
      </div>
    </div>
  </div>
</div>
