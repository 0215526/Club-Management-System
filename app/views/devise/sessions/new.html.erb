<body class="cover">
<div class="container h-100">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
				<h3>Sign In</h3>
				<div class="d-flex justify-content-end social_icon">
					<span><i class="fa fa-facebook-square"></i></span>
					<span><i class="fa fa-google-plus-square"></i></span>
					<span><i class="fa fa-twitter-square"></i></span>
				</div>
			</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Email", autocomplete: "email" %>
          </div>

          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field :password, class: "form-control input_user", placeholder:"Password", autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="row align-items-center remember">
              <%= f.check_box :remember_me%>Remember Me
            </div>
          <% end %>

          <div class="form-group">
            <%= f.submit "Log in", class: "btn float-right login_btn" %>
          </div>
        <% end %>
      </div>  
      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            Don't have an account?<%= link_to "Sign up", new_registration_path(resource_name), class:"ml-2 font-weight-bold" %>
          <%end%>
        </div>
        <div class="d-flex justify-content-center links">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-white" %>
        </div>
        <div class="d-flex justify-content-center links small">
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-white" %>
        </div>
        <div class="d-flex justify-content-center links small">
          <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-white" %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
