<div class="d-flex justify-content-center h-100">
  <div class="card", style="width: 38rem; height: 20rem;">
    <div class="card-header">
      <h3 class="text-center">Resend Unlock Instructions</h3>
    </div>
    <div class="card-body justify-content-center">
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class:"col-md-4 text-capitalize font-weight-bold text-white" %>
        <div class="col-md-12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Resend unlock instructions",class: "btn btn-primary float-right mr-3" %>
      </div>
    <% end %>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-center links">
        <%= link_to "Log in", new_session_path(resource_name), class:"ml-2 font-weight-bold text-white" %>
      </div>
      <div class="d-flex justify-content-center links">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class:"ml-2 font-weight-bold text-white" %>
        <%end%>
      </div>
      <div class="d-flex justify-content-center links small">
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-white" %>
      </div>
    </div>
  </div>
</div>
