<!DOCTYPE html>
<html>
  <head>
    <title>ClubManagementSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => "reload" %>
  </head>

  <body>
    <%if !user_signed_in? %>
      <%= render 'layouts/alerts' %>
      <%= yield %>
    <%else%>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a href="#" class="navbar-brand">CLUB</a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
          <div class="navbar-nav">
            <a href="/homes/" class="nav-item nav-link active">Home</a>
            <a href="/homes/<%= current_user.id %>"  class="nav-item nav-link">Profile</a>
            <a href="/news/" class="nav-item nav-link">News</a>
            <a href="#" class="nav-item nav-link">Events</a>
          </div>
          <div class="navbar-nav ml-auto">
            <%= link_to  "Log Out", destroy_user_session_path, :method => "delete", class: "nav-item nav-link" %>
          </div>
        </div>
      </nav> 
      <div class="container">
        <%= yield %> 
      </div>
    <%end%>
  </body>
</html>
