<div class="table-wrapper">
	<% if @users.empty? %>
		<h4>All the Members had Registered for this Event</h4>
	<%else%>
		<div class="table-title">
			<div class="row">
				<div class="col-sm-6 p-4 text-center">
					<h4>Add Members</h4>
				</div>
			</div>
		</div>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th>Gender</th>
					<th>Register</th>
				</tr>
			</thead>
			<tbody>
				<%@users.each do |user| %>
					<tr>
						<td><%= user.first_name %> <%= user.last_name %> </td>
						<td><%= user.email %> </td>
						<td><%= user.gender %> </td>
                        <td>
                            <%= link_to 'Register', event_register_to_event_path(id: params[:event_id],user_id: user.id), class: "btn btn-primary ml-3" %>
                        </td>

					</tr>
				<%end%> 
			</tbody>
		</table>
	<%end%>
</div>