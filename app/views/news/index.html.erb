<h3 class="text-capitalize font-weight-bold text-center p-3">News</h3>
<div class="row mb-2 justify-content-center">
  <div class="col-10">
    <% @news.each do |news| %>
      <div class="row align-content-center">
        <div class="col-5 p-3">
          <%= image_tag(news.image, class:"image_news")%>
        </div>
        <div class="col-7">
          <h6 class="text-capitalize font-weight-bold text-center border-bottom p-2"><%= link_to news.title, news %> </h6>
          <span class="mt-1"> 
            <% if news.body.length > 250 %>
              <%= sanitize news.body[0..250]  %><%= link_to '...Read more', news %>
            <% else %>
              <%= sanitize news.body %> 
            <% end %>
          </span>
          <br>
          <%= link_to 'Show', news %>
          <%= link_to 'Edit', edit_news_path(news) %>
          <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
      <hr>
    <% end %>
    
    <%= link_to 'New News', new_news_path %>
  </div>
</div>
<%
=begin%>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <div style="width:400px; height:auto;">
          <%= image_tag(news.image, style:'width:100%')%>
        </div>
        <td><%= news.title %></td>
        <td><%= sanitize news.body %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br> 
<%
=end%>
