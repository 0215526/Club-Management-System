<% content_for(:title, @user.full_name) %>
<div class="row">
  <div class="col-md-12 my-3">
    <div class="bg-mattBlackLight px-3 py-3">
      <div class="table-wrapper">
          <div class="table-title">
              <div class="row">
                  <div class="col-md-10 text-center p-4">
                      <h2 class="text-center">My Profile</h2>
                  </div>
              </div>
          </div>
          <table class="table table-dark">
              <tbody>
                  <tr>
                      <td>Name</td>
                      <td><%= @user.full_name %></td>
                  </tr>
                  <tr>
                      <td>Email</td>
                      <td><%= @user.email %> </td>
                  </tr>
                  <tr>
                      <td>Gender</td>
                      <td><%= @user.gender %> </td>
                  </tr>
                  <tr>
                      <td>Date of Birth</td>
                      <td><%= @user.dob %> </td>
                  </tr>
                  <tr>
                      <td>Designation</td>
                      <td><%= @user.designation %> </td>
                  </tr>
                  <tr>
                      <td>Company</td>
                      <td><%= @user.company %> </td>
                  </tr>
                      <tr>
                      <td>Address</td>
                      <td><%= @user.address %> </td>
                  </tr>

                  <tr>
                      <td>Admin Type</td>
                      <td>
                          <%= @user.admin_type %>
                      </td>
                  <tr>
              </tbody>
          </table>
          <div class="row">
            <div class="col-md-12">
              <% if current_user == @user%>
                <%= link_to "Edit Profile", edit_user_registration_path, class:"btn btn-info float-right" %>
               <%elsif current_user.admin? %>
                <%= link_to "Edit User", edit_user_path(@user.id), class:"btn btn-info float-right" %>
              <%end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>